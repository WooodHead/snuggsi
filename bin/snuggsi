#!/usr/bin/env bash
# http://www.tldp.org/LDP/abs/html/parameter-substitution.html

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

echo "DIRRRRR ${DIR}"

PARAMS=$@

export POSTCSS="$DIR/postcss"
export PATH=$1
export ENTRY="$POSTCSS $(pwd)/${PATH:-foo-bar}/index.css"

echo $ENTRY

$( $ENTRY )

echo "All $PARAMS"

echo "Component name $NAME"

for PARAM in $PARAMS
do
# if [[ $PARAM == -* ]
  if [[ -d $PARAM ]]; then
    echo $PARAM
  else
    echo "NO DIRECTORY $PARAM"
  fi
done


echo "Snuggsi cli"

# Commands
# init
# component :name
# style :name
# browse :name
# lint :name
# test :name
# compress :name
# serve [:name]
