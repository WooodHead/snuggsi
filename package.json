{
  "name": "snuggsi",
  "version": "0.1.2",
  "author": "Snuggsi",
  "description": "Sane client components",
  "license": "MIT",

  "bugs": { "url": "https://github.com/snuggs/snuggsi/issues" },

  "homepage": "https://github.com/snuggs/snuggsi#readme",
  "engines": { "node": "7.3.x" },

  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/snuggs/snuggsi.git"
  },

  "keywords": [
    "web",
    "components",
    "resource",
    "routing",
    "templates"
  ],

  "main": "index.es",

  "directories": {
    "test": "test"
  },

  "scripts": {
    "postinstall": "[ \"$NODE_ENV\" != production ] && npm ln ../jsdom && npm ln ../buble-tape",
    "test": "node --use_strict index.test.es",

    "watch": "node watch.es",
    "weigh": "echo $(gzip -9 -c -S=.js ./dist/*.min.es | wc -c) bytes",

    "browse": "browser-sync start --config=./watch.browser.es",

    "cover": "tap index.test.es --cov --coverage-report=lcov"
  },

  "devDependencies": {
    "tap": "*",
    "browser-sync": "*"
  }
}
