{
  "name": "snuggsi",
  "version": "0.1.2",
  "author": "Snuggs",
  "description": "Easy DOM Components",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devpunks/snuggsi/issues"
  },
  "homepage": "https://github.com/devpunks/snuggsi#readme",
  "engines": {
    "node": "7.3.x"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/devpunks/snuggsi.git"
  },
  "keywords": [
    "web",
    "components",
    "resource",
    "routing",
    "templates"
  ],
  "main": "index.es",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postinstall": "[ \"$NODE_ENV\" != production ] && npm ln ../jsdom && npm ln ../buble-tape",
    "test": "node --use_strict index.test.es",
    "watch": "node watch.es",

    "bundle": "cat elements/element.es > dist/snuggsi.es",

    "transpile": "npm run bundle && node ./transpile.es > ./dist/snuggsi.js && npm run uglify && npm run gzip && npm run weigh",
    "copy" : "pbcopy < ./dist/snuggsi.js",
    "uglify": "uglifyjs ./dist/snuggsi.js -c -m -o ./dist/snuggsi.min.js",
    "gzip": "gzip -k -9 -c -S=.js ./dist/*.min.js > ./dist/snuggsi.min.js.gz",

    "weigh": "npm run bundle && echo $(gzip -9 -c -S=.js ./dist/*.min.js | wc -c) bytes",
    "browse": "browser-sync start --config=./watch.browser.es",
    "cover": "tap index.test.es --cov --coverage-report=lcov"
  },
  "devDependencies": {
    "buble": "*",
    "uglifyjs": "*",
    "browser-sync": "*",
    "devtools-terminal": "^0.1.3",
    "tap": "*"
  }
}
